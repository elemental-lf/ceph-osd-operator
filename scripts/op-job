#!/bin/bash
if [ $# != 1 ]; then
  echo "usage: $(basename $0) <job-id>" 1>&2
  exit 1
fi

kubectl exec $(kubectl get pod -l name=ceph-osd-operator -o 'jsonpath={.items[0].metadata.name}') -- \
  sh -c 'cat /tmp/ansible-operator/runner/ceph.elemental.net/v1alpha1/CephOSD/default/*/artifacts/'"$1"'/stdout' | less
