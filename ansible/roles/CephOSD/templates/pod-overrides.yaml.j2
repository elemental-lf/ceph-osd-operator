apiVersion: v1
kind: Pod
metadata:
  name: {{ ceph_osd_pod_name }}
  namespace: {{ ceph_osd_cr_namespace }}
  labels:
    {{ ceph_osd_cr_api_group }}/owner: "{{ ceph_osd_cr_kind }}-{{ ceph_osd_cr_name }}"
  annotations:
    {{ ceph_osd_cr_api_group }}/pod-template-hash: "{{ ceph_osd_pod_template_hash }}"
    {{ ceph_osd_cr_api_group }}/host: "{{ ceph_osd_host }}"
    {{ ceph_osd_cr_api_group }}/data: "{{ ceph_osd_data }}"
{% if ceph_osd_db %}
    {{ ceph_osd_cr_api_group }}/db: "{{ ceph_osd_db }}"
{% endif %}
{% if ceph_osd_wal %}
    {{ ceph_osd_cr_api_group }}/wal: "{{ ceph_osd_wal }}"
{% endif %}
    {{ ceph_osd_cr_api_group }}/upgrade-state: "up-to-date"
  ownerReferences:
  - apiVersion: {{ ceph_osd_cr_api_version }}
    controller: True
    blockOwnerDeletion: True
    kind: {{ ceph_osd_cr_kind }}
    name: {{ ceph_osd_cr_name }}
    uid: {{ ceph_osd_cr_uid }}
spec:
  affinity:
    nodeAffinity:
      requiredDuringSchedulingIgnoredDuringExecution:
        nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
            - "{{ ceph_osd_host }}"